<Window x:Class="KSiS_Laba4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSiS_Laba4"
        mc:Ignorable="d"
        Title="MainWindow" Width="525" Height="525">
	<Grid>
		<Menu x:Name="menu" HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top"/>
		<TextBox x:Name="TbMain" HorizontalAlignment="Stretch" Margin="10,25,10,50" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" MinHeight="300" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
		<Button x:Name="BStart" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,15" VerticalAlignment="Bottom" Width="75" Click="BStart_Click"/>
		<Button x:Name="BStop" Content="Stop" HorizontalAlignment="Left" Margin="10,0,0,15" VerticalAlignment="Bottom" Width="75" Visibility="Collapsed" Click="BStop_Click"/>

	</Grid>
</Window>
